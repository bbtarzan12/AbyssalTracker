{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EVE Abyssal Tracker",
  "version": "0.1.0",
  "identifier": "com.eve-abyssal-tracker-tauri.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "EVE Abyssal Tracker",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "abyssal-result"]
    }
  },
  "plugins": {
    "python": {
      "mainScriptFile": "python/backend.py",
      "args": [],
      "venv": "python/.venv"
    },
    "updater": {
      "endpoints": [
        "https://github.com/bbtarzan12/AbyssalTracker/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM0RUJFOEZCM0I0QkI1RjMKUldUenRVczcrK2pyeEljR2RVd1NZT1liRStudmw5T3hRQzNBRThOb2NnR29rNzBXdHFmNTVCclEK"
    }
  },
  "bundle": {
    "active": false,
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  }
}
