{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EVE Abyssal Tracker",
  "version": "0.1.0",
  "identifier": "com.eve-abyssal-tracker-tauri.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "EVE Abyssal Tracker",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "abyssal-result"]
    }
  },
  "plugins": {
    "python": {
      "mainScriptFile": "python/backend.py",
      "args": [],
      "venv": "python/.venv"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "data/*"
    ]
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://api.github.com/repos/bbtarzan12/AbyssalTracker/releases/latest"
    ],
    "dialog": true,
    "pubkey": "MCowBQYDK2VwAyEAPSJxCUonP7h69D58S3NeMKgdwaY0uQGqF3yvzdfjrKM="
  }
}
